{
	"compilerOptions": {
		"baseUrl": "src",
		"module": "ESNext",
		"target": "ES2018",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "ES2020"]
	},
	"include": ["src/**/*.ts"]
}
